@model WebMvcProject.Data.Course

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<h1>Kurs</h1>
<br />

<div class="row w-100 align-items-center justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Course" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Kurs Adı:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Content" class="control-label">Kurs İçeriği:</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Price" class="control-label">Kurs Fiyatı:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TotalHours" class="control-label">Toplam Ders Saati:</label>
                <input asp-for="TotalHours" class="form-control" />
                <span asp-validation-for="TotalHours" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Başlama Tarihi:</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Bitiş Tarihi</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-success" />
                <a class="btn btn-primary" asp-controller="Course" asp-action="Index">Vazgeç</a>
            </div>
        </form>
    </div>
</div>
<br />