@using WebMvcProject.Data

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model List<Teacher>

<div class="container" style="padding:130px 30px!important;">
    <h1 class="my-2">Öğretmen Listesi</h1>
    <div class="mt-2 text-end">
        <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            Yeni Kayıt
        </a>
    </div>
    <div class="mt-2 text-end" />
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th class="bg-black text-start text-white">
                    Ad Soyad
                </th>
                <th class="bg-black text-start text-white">
                    Sicil Numarası
                </th>
                <th class="bg-black text-start text-white">
                    Telefon Numarası
                </th>
                <th class="bg-black text-start text-white" width="250px">
                    İşlemler
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-start">@item.Name @item.Surname.ToUpper()</td>
                    <td class="text-start">@item.RegistrationNumber</td>
                    <td class="text-start">@item.PhoneNumber</td>
                    <td width="250px" style="display: grid;">
                        <a class="btn btn-secondary btn-sm mt-1" asp-controller="Teacher" asp-action="Update" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger btn-sm mt-1" asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



